<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".QMuseumActivity">

    <TextView
        android:id="@+id/question_museum_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:padding="10dp"
        android:fontFamily="@font/opensansbold"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="2dp"
        android:text="What types of museum are you interested in?"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="26sp" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/q_cgMuseum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <com.google.android.material.chip.Chip
            android:id="@+id/q_chipArt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            style="@style/CustomChipStyle"
            android:text="Art"
            android:textAppearance="@style/chipTextappearance"
            />

        <com.google.android.material.chip.Chip
            android:id="@+id/q_chipAutomotive"
            style="@style/CustomChipStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textAppearance="@style/chipTextappearance"
            android:text="Automotive" />

        <com.google.android.material.chip.Chip
            android:id="@+id/q_chipAviation"
            style="@style/CustomChipStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textAppearance="@style/chipTextappearance"
            android:text="Aviation" />

        <com.google.android.material.chip.Chip
            android:id="@+id/q_chipEthnic"
            style="@style/CustomChipStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textAppearance="@style/chipTextappearance"
            android:text="Ethnic" />

        <com.google.android.material.chip.Chip
            android:id="@+id/q_chipHistory"
            style="@style/CustomChipStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textAppearance="@style/chipTextappearance"
            android:text="History" />

        <com.google.android.material.chip.Chip
            android:id="@+id/q_chipFarm"
            style="@style/CustomChipStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textAppearance="@style/chipTextappearance"
            android:text="Farm" />

        <com.google.android.material.chip.Chip
            android:id="@+id/q_chipFashion"
            style="@style/CustomChipStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textAppearance="@style/chipTextappearance"
            android:text="Fashion" />

        <com.google.android.material.chip.Chip
            android:id="@+id/q_chipForestry"
            style="@style/CustomChipStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textAppearance="@style/chipTextappearance"
            android:text="Forestry" />

        <com.google.android.material.chip.Chip
            android:id="@+id/q_chipIndustry"
            style="@style/CustomChipStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textAppearance="@style/chipTextappearance"
            android:text="Industry" />

        <com.google.android.material.chip.Chip
            android:id="@+id/q_chipLiterary"
            style="@style/CustomChipStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textAppearance="@style/chipTextappearance"
            android:text="Literary" />

        <com.google.android.material.chip.Chip
            android:id="@+id/q_chipMaritime"
            style="@style/CustomChipStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textAppearance="@style/chipTextappearance"
            android:text="Maritime" />

        <com.google.android.material.chip.Chip
            android:id="@+id/q_chipMedia"
            style="@style/CustomChipStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textAppearance="@style/chipTextappearance"
            android:text="Media" />

        <com.google.android.material.chip.Chip
            android:id="@+id/q_chipMilitary"
            style="@style/CustomChipStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textAppearance="@style/chipTextappearance"
            android:text="Military" />

        <com.google.android.material.chip.Chip
            android:id="@+id/q_chipMusic"
            style="@style/CustomChipStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textAppearance="@style/chipTextappearance"
            android:text="Music" />

        <com.google.android.material.chip.Chip
            android:id="@+id/q_chipOpenAir"
            style="@style/CustomChipStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textAppearance="@style/chipTextappearance"
            android:text="Open air" />

        <com.google.android.material.chip.Chip
            android:id="@+id/q_chipPrison"
            style="@style/CustomChipStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textAppearance="@style/chipTextappearance"
            android:text="Prison" />

        <com.google.android.material.chip.Chip
            android:id="@+id/q_chipRailway"
            style="@style/CustomChipStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textAppearance="@style/chipTextappearance"
            android:text="Railway" />

        <com.google.android.material.chip.Chip
            android:id="@+id/q_chipSports"
            style="@style/CustomChipStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textAppearance="@style/chipTextappearance"
            android:text="Sports" />

        <com.google.android.material.chip.Chip
            android:id="@+id/q_chipTechnology"
            style="@style/CustomChipStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textAppearance="@style/chipTextappearance"
            android:text="Technology" />
    </com.google.android.material.chip.ChipGroup>

    <ToggleButton
        android:id="@+id/q_filter_toggleButton"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="15dp"
        android:text="ToggleButton"
        android:fontFamily="@font/opensanssemibold"
        android:textSize="15sp"
        android:textOn="Deselect All"
        android:textAllCaps="false"
        android:textOff="Select All"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

        <Button
            android:id="@+id/question_museum_next_btn"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="88dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/intro_button_background"
            android:fontFamily="@font/opensansbold"
            android:text="Next"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

</LinearLayout>