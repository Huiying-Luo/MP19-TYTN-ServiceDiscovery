<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".QMuseumActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/question_museum_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/opensansbold"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="2dp"
            android:padding="10dp"
            android:text="What types of museum are you interested in?"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="23sp" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/q_cgMuseum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <com.google.android.material.chip.Chip
                android:id="@+id/q_chipArt"
                style="@style/CustomChipStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="Art"
                android:textAppearance="@style/chipTextappearanceSmall" />

            <com.google.android.material.chip.Chip
                android:id="@+id/q_chipAutomotive"
                style="@style/CustomChipStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="Automotive"
                android:textAppearance="@style/chipTextappearanceSmall" />

            <com.google.android.material.chip.Chip
                android:id="@+id/q_chipAviation"
                style="@style/CustomChipStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="Aviation"
                android:textAppearance="@style/chipTextappearanceSmall" />

            <com.google.android.material.chip.Chip
                android:id="@+id/q_chipEthnic"
                style="@style/CustomChipStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="Ethnic"
                android:textAppearance="@style/chipTextappearanceSmall" />

            <com.google.android.material.chip.Chip
                android:id="@+id/q_chipHistory"
                style="@style/CustomChipStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="History"
                android:textAppearance="@style/chipTextappearanceSmall" />

            <com.google.android.material.chip.Chip
                android:id="@+id/q_chipFarm"
                style="@style/CustomChipStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="Farm"
                android:textAppearance="@style/chipTextappearanceSmall" />

            <com.google.android.material.chip.Chip
                android:id="@+id/q_chipFashion"
                style="@style/CustomChipStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="Fashion"
                android:textAppearance="@style/chipTextappearanceSmall" />

            <com.google.android.material.chip.Chip
                android:id="@+id/q_chipForestry"
                style="@style/CustomChipStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="Forestry"
                android:textAppearance="@style/chipTextappearanceSmall" />

            <com.google.android.material.chip.Chip
                android:id="@+id/q_chipIndustry"
                style="@style/CustomChipStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="Industry"
                android:textAppearance="@style/chipTextappearanceSmall" />

            <com.google.android.material.chip.Chip
                android:id="@+id/q_chipLiterary"
                style="@style/CustomChipStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="Literary"
                android:textAppearance="@style/chipTextappearanceSmall" />

            <com.google.android.material.chip.Chip
                android:id="@+id/q_chipMaritime"
                style="@style/CustomChipStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="Maritime"
                android:textAppearance="@style/chipTextappearanceSmall" />

            <com.google.android.material.chip.Chip
                android:id="@+id/q_chipMedia"
                style="@style/CustomChipStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="Media"
                android:textAppearance="@style/chipTextappearanceSmall" />

            <com.google.android.material.chip.Chip
                android:id="@+id/q_chipMilitary"
                style="@style/CustomChipStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="Military"
                android:textAppearance="@style/chipTextappearanceSmall" />

            <com.google.android.material.chip.Chip
                android:id="@+id/q_chipMusic"
                style="@style/CustomChipStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="Music"
                android:textAppearance="@style/chipTextappearanceSmall" />

            <com.google.android.material.chip.Chip
                android:id="@+id/q_chipOpenAir"
                style="@style/CustomChipStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="Open air"
                android:textAppearance="@style/chipTextappearanceSmall" />

            <com.google.android.material.chip.Chip
                android:id="@+id/q_chipPrison"
                style="@style/CustomChipStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="Prison"
                android:textAppearance="@style/chipTextappearanceSmall" />

            <com.google.android.material.chip.Chip
                android:id="@+id/q_chipRailway"
                style="@style/CustomChipStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="Railway"
                android:textAppearance="@style/chipTextappearanceSmall" />

            <com.google.android.material.chip.Chip
                android:id="@+id/q_chipSports"
                style="@style/CustomChipStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="Sports"
                android:textAppearance="@style/chipTextappearanceSmall" />

            <com.google.android.material.chip.Chip
                android:id="@+id/q_chipTechnology"
                style="@style/CustomChipStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="Technology"
                android:textAppearance="@style/chipTextappearanceSmall" />
        </com.google.android.material.chip.ChipGroup>

        <ToggleButton
            android:id="@+id/q_filter_toggleButton"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="10dp"
            android:fontFamily="@font/opensanssemibold"
            android:text="ToggleButton"
            android:textAllCaps="false"
            android:textOff="Select All"
            android:textOn="Deselect All"
            android:textSize="13sp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/question_museum_next_btn"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="88dp"
            android:background="@drawable/intro_button_background"
            android:fontFamily="@font/opensansbold"
            android:text="Next"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

    </LinearLayout>

</ScrollView>